{
    "type": "APL",
    "version": "1.0",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.0.0"
        }
    ],
    "styles": {
        "textStylePrimary": {
            "values": {
                "fontSize": 72
            }
        },
        "textStyleSecondary": {
            "values": {
                "fontSize": 60,
                "textAlign": "center"
            }
        },
        "textStyleTertiary": {
            "values": {
                "fontSize": 36,
                "textAlign": "center"
            }
        }
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "when": "${viewport.shape == 'round'}",
                "type": "Container",
                "width": "100%",
                "height": "100%",
                "alignItems": "center",
                "justifyContent": "spaceAround",
                "items": [
                    {
                        "type": "Video",
                        "id": "VideoPlayer",
                        "autoplay": true,
                        "width": "100%",
                        "height": "100%",
                        "scale": "best-fit",
                        "source": "${payload.videoResponseData.properties.source}",
                        "position": "absolute",
                        "onPause":[
                            {
                               "type": "SetState",
                               "componentId": "alexaPlayPauseToggleButton",
                               "state": "checked",
                               "value": true
                          }
                        ],
                        "onPlay":[
                            {
                               "type": "SetState",
                               "componentId": "alexaPlayPauseToggleButton",
                               "state": "checked",
                               "value": false
                          }
                        ],
                        "onEnd":[
                            {
                                "type": "Sequential",
                                "commands": [{
                                "type": "SetState",
                                "componentId": "alexaPlayPauseToggleButton",
                                "state": "checked",
                                "value": true
                                },
                                {
                                    "type": "ControlMedia",
                                    "command": "rewind"
                                }]
                            }
                        ]
                    },
                    {
                        "type": "Frame",
                        "width": "100%",
                        "backgroundColor": "rgba(0, 0, 0, 0.7)",
                        "item": {
                            "type": "Text",
                            "text": "${payload.videoResponseData.properties.title}",
                            "style": "textStylePrimary",
                            "textAlign": "center",
                            "paddingTop": "10%"
                        }
                    },
                    {
                        "type": "AlexaTransportControls",
                        "secondaryControls": "none",
                        "autoplay": "${payload.videoResponseData.properties.hasAudio ? true : false}",
                        "mediaComponentId": "VideoPlayer"
                    }
                ]
            },
            {
                "type": "Container",
                "width": "100%",
                "height": "100%",
                "alignItems": "center",
                "justifyContent": "start",
                "items": [
                    {
                        "type": "Frame",
                        "backgroundColor": "rgba(0, 0, 0, 0.5)",
                        "width": "100%",
                        "height": "100%",
                        "position": "absolute"
                    },
                    {
                        "type": "Text",
                        "text": "${payload.videoResponseData.properties.title}",
                        "style": "textStylePrimary"
                    },
                    {
                        "type": "Container",
                        "width": "100%",
                        "height": "70%",
                        "alignItems": "center",
                        "justifyContent": "end",
                        "items": [
                        {
                            "type": "Video",
                            "id": "VideoPlayer",
                            "autoplay": "${payload.videoResponseData.properties.hasAudio ? true : false}",
                            "width": "100%",
                            "height": "100%",
                            "scale": "best-fit",
                            "source": "${payload.videoResponseData.properties.source}",
                            "position": "absolute",
                            "onPause":[
                                {
                                   "type": "SetState",
                                   "componentId": "alexaPlayPauseToggleButton",
                                   "state": "checked",
                                   "value": true
                              }
                            ],
                            "onPlay":[
                                {
                                   "type": "SetState",
                                   "componentId": "alexaPlayPauseToggleButton",
                                   "state": "checked",
                                   "value": false
                              }
                            ],
                            "onEnd":[
                            {
                                "type": "SetState",
                                "componentId": "alexaPlayPauseToggleButton",
                                "state": "checked",
                                "value": true
                            },
                            {
                                "type": "ControlMedia",
                                "componentId": "VideoPlayer",
                                "command": "rewind"
                            }
                            ]
                        },
                        {
                            "type": "AlexaTransportControls",
                            "secondaryControls": "none",
                            "autoplay": "${payload.videoResponseData.properties.hasAudio ? true : false}",
                            "mediaComponentId": "VideoPlayer"
                        },
                        {
                            "when": "${payload.videoResponseData.properties.hasAudio == false}",
                            "type": "ScrollView",
                            "height": "10%",
                            "width": "80%",
                            "item": {
                                "type": "Text",
                                "id": "Narrative",
                                "text": "${payload.videoResponseData.properties.description}",
                                "speech": "${payload.videoResponseData.properties.descriptionSpeech}"
                            }
                        }
                        ]
                    },
                    {
                      "type": "Container",
                      "height": "10%",
                      "grow": 1
                    },
                    {
                        "type": "Container",
                        "width": "100%",
                        "height": "10%",
                        "items": [
                            {
                                "type": "Pager",
                                "id": "HintPager",
                                "width": "100%",
                                "height": "100%",
                                "data": "${payload.hintsData.properties.hints}",
                                "item": {
                                    "type": "Container",
                                    "direction": "row",
                                    "width": "100%",
                                    "items": [
                                    {
                                        "type": "Text",
                                        "text": "${data.hint}",
                                        "style": "textStyleHint",
                                        "textAlign": "center",
                                        "width": "100%"
                                    }
                                    ]
                                }
                            }
                        ]
                    }
                ]
            }
        ]
    }
}