{
    "type": "APL",
    "version": "1.0",
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.0.0"
        }
    ],
    "styles": {
        "textStylePrimary": {
            "values": {
                "fontSize": 72
            }
        },
        "textStyleSecondary": {
            "values": {
                "fontSize": 60,
                "textAlign": "center"
            }
        },
        "textStyleTertiary": {
            "values": {
                "fontSize": 36,
                "textAlign": "center"
            }
        }
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "when": "${viewport.shape == 'round'}",
                "type": "Container",
                "width": "100%",
                "height": "100%",
                "alignItems": "center",
                "justifyContent": "spaceBetween",
                "items": [
                    {
                        "type": "Text",
                        "text": "${payload.vehicleDisplayData.name}",
                        "style": "textStylePrimary",
                        "paddingTop": "10vh"
                    },
                    {
                        "type": "Text",
                        "text": "${payload.vehicleDisplayData.state}",
                        "style": "textStyleSecondary"
                    },
                    {
                        "type": "Image",
                        "width": "100%",
                        "height": "100%",
                        "scale": "best-fill",
                        "source": "${payload.vehicleDisplayData.imageUrl}"
                    }
                ]
            },
            {
                "type": "Container",
                "width": "100%",
                "height": "100%",
                "alignItems": "center",
                "justifyContent": "start",
                "items": [
                    {
                        "type": "Frame",
                        "backgroundColor": "#333333",
                        "width": "100%",
                        "height": "100%",
                        "position": "absolute"
                    },
                    {
                        "type": "Image",
                        "width": "100%",
                        "height": "100%",
                        "position": "absolute",
                        "scale": "best-fill",
                        "source": "${payload.vehicleDisplayData.imageUrl}",
                        "overlayColor": "rgba(0, 0, 0, 0.3)"
                    },
                    {
                        "type": "Text",
                        "text": "${payload.vehicleDisplayData.name}",
                        "style": "textStylePrimary",
                        "paddingTop": "5vh"
                    },
                    {
                        "type": "Container",
                        "paddingBottom": "10vh",
                        "items": [
                            {
                                "type": "Text",
                                "text": "${payload.vehicleDisplayData.state}",
                                "style": "textStyleSecondary"
                            },
                            {
                                "when": "${payload.vehicleDisplayData.chargeDataAvailable}",
                                "type": "Text",
                                "text": "${payload.chargeData.timeRemaining} remaining",
                                "style": "textStyleTertiary"
                            }
                        ]
                    },
                    {
                        "when": "${payload.vehicleDisplayData.chargeDataAvailable}",
                        "type": "Frame",
                        "backgroundColor": "rgba(100, 100, 100, 0.5)",
                        "borderRadius": 50,
                        "height": "40%",
                        "width": "80%",
                        "item": {
                            "type": "Container",
                            "height": "100%",
                            "alignItems": "start",
                            "items": [
                                {
                                    "type": "Frame",
                                    "backgroundColor": "rgba(0, 255, 0, 0.5)",
                                    "borderRadius": 50,
                                    "width": "${payload.chargeData.batteryLevel}%",
                                    "height": "100%"
                                },
                                {
                                    "type": "Container",
                                    "position": "absolute",
                                    "width": "100%",
                                    "height": "100%",
                                    "alignItems": "center",
                                    "justifyContent": "center",
                                    "items": [
                                        {
                                            "type": "Text",
                                            "position": "absolute",
                                            "text": "${payload.chargeData.batteryRange} miles",
                                            "style": "textStylePrimary"
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                ]
            }
        ]
    }
}